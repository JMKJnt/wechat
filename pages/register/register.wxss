/* pages/register/register.wxss */
.head {
  width: 100%;
  height: 100%;
  position: relative;
  margin-top: 20px;
}

.head-tips {
  margin-left: 3%;
  font-size: 45rpx;
  color: #353535;
  position: relative;
  line-height: 45rpx;
  border-left: 2px solid #4a7eff;
  padding-left: 10rpx;
}

.head-info {
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #eaeaea;
  position: relative;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  line-height: 70px;
  font-size: 30rpx;
}

.head-i-p-n {
  position: relative;
  width: 20%;
  height: 100%;
  margin-right: 3rpx;
  margin-left: 25rpx;
}

.head-i-p {
  position: relative;
  width: 78%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.head-i-p>input {
  width: 90%;
  height: 100%;
  position: relative;
  top: 10px;
  font-size: 28rpx;
}

.head-i-p-c {
  width: 38%;
  height: 100%;
  color: #5082ff;
  font-size: 28rpx;
  text-align: right;
}

.h-f-l {
  width: 80%;
  height: 38px;
  position: relative;
  margin: 50px auto;
  font-size: 30rpx;
  letter-spacing: 10rpx;
  background-color: #5082ff;
  color: #fff;
  text-align: center;
  line-height: 38px;
  border-radius: 20px;
}

checkbox {
  transform: scale(0.6);
}

.h-raido {
  font-size: 27rpx;
  left: -10px;
  position: relative;
}

.pro-tips {
  background-color: #fff;
  border: 1px solid #5082ff;
  width:88%;
  height: 150px;
  position: relative;
  top: 150px;
  border-radius: 10px;
  margin: 0 auto;
  font-size: 28rpx;
  box-shadow: 0px 2px 16px 2px rgba(0,0, 0, 0.3);
  z-index: 2;
}

.pro-tips-t-view {
  width:90%;
  position: relative;
  padding: 30rpx;
  /* margin: 20rpx; */
  font-weight: bold;
}

.pro-tips-v {
  width: 200px;
  position: relative;
  height: 25px;
  background-color: #5082ff;
  text-align: center;
  color: #ffffff;
  border-radius: 25rpx;
  margin:0 auto;
  margin-top: 20px;
  line-height: 25px;
}
.span-color{
  background-color: #cccccc !important;
}
