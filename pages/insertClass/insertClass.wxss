.head {
  width: 100%;
  height: 100%;
  position: relative;
  margin-top: 20px;
}

.head-tips {
  margin-left: 3%;
  font-size: 45rpx;
  color: #353535;
  position: relative;
  line-height: 45rpx;
  border-left: 2px solid #4a7eff;
  padding-left: 10rpx;
}

.head-info {
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #eaeaea;
  position: relative;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  line-height: 70px;
  font-size: 30rpx;
}

.head-i-p-n {
  position: relative;
  width: 20%;
  height: 100%;
  margin-right: 3rpx;
  margin-left: 25rpx;
}

.head-i-p {
  position: relative;
  width: 78%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.head-i-p>input {
  width: 90%;
  height: 100%;
  position: relative;
  top: 10px;
  font-size: 28rpx;
}
.head-i-p-c{
  width: 38%;
  height: 100%;
  color: #5082ff;
  font-size: 28rpx;
  text-align: right;
}

.h-f-l{
  width: 80%;
  height: 38px;
  position: relative;
  margin: 50px auto;
  font-size: 30rpx;
  letter-spacing:10rpx;
  background-color: #5082ff;
  color: #fff;
  text-align: center;
  line-height: 38px;
  border-radius: 20px;
}
radio {
  transform:scale(0.6);
}
.h-raido{
  font-size: 27rpx;
  left: -10px;
  position: relative;
