/* pages/login/login.wxss */

form {
  width: 100%;
  height: 100%;
}

.head {
  width: 100%;
  height: 100%;
  position: relative;
  margin-top: 20px;
}

.head-tips {
  margin-left: 3%;
  font-size: 45rpx;
  color: #353535;
  position: relative;
  line-height: 45rpx;
  border-left: 2px solid #4a7eff;
  padding-left: 10rpx;
}

.head-info {
  width: 100%;
  height: 70px;
  border-bottom: 1px solid #eaeaea;
  position: relative;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  line-height: 90px;
  font-size: 30rpx;
}

.head-i-p-n {
  position: relative;
  width: 20%;
  height: 100%;
  margin-right: 5px;
  margin-left: 25rpx;
}

.head-i-p {
  position: relative;
  width: 95%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.head-i-p>input {
  width: 60%;
  height: 100%;
  position: relative;
  top: 10px;
  font-size: 28rpx;
}

.head-i-p-c {
  width: 38%;
  height: 100%;
  color: #5082ff;
  font-size: 28rpx;
  text-align: right;
}
radio {
  transform: scale(0.6);
}

.h-raido {
  font-size: 27rpx;
  left: -10px;
  position: relative;
  width: 100%;
  text-align: left;
}
.head-r {
  font-size: 29rpx;
  color: #5082ff;
  width: 100%;
  height: 20px;
  position: fixed;
  text-align: center;
  bottom: 100rpx;
}

.re-label {
  width: auto;
  border-bottom: 1px solid #5082ff;
}

.h-f-l {
  width: 80%;
  height: 38px;
  position: relative;
  margin: 25px auto;
  font-size: 30rpx;
  letter-spacing: 10rpx;
  background-color: #5082ff;
  color: #fff;
  border: 1px solid #5082ff;
  text-align: center;
  line-height: 35px;
  border-radius: 20px;
}
