/* pages/class/class.wxss */

.head {
  width: 100%;
  height: 100%;
  position: relative;
  margin-top: 20px;
}

.head-tips {
  margin-left: 5%;
  font-size: 45rpx;
  color: #595959;
  position: relative;
  line-height: 45rpx;
  border-left: 2px solid #4a7eff;
  padding-left: 10rpx;
}

.head-info {
  width: 90%;
  height: 50px;
  border-bottom: 1px solid #dbdbdb;
  position: relative;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  line-height: 70px;
  font-size: 30rpx;
}

.head-i-p-n {
  position: relative;
  width: 23%;
  height: 100%;
  margin-right: 5px;
  color: #808080;
}

.head-i-p {
  position: relative;
  width: 75%;
  height: 100%;
  display: flex;
  flex-direction: row;
}

.head-i-p>input {
  width: 95%;
  height: 100%;
  position: relative;
  top: 10px;
  font-size: 28rpx;
}

.head-i-p-c {
  width: 38%;
  height: 100%;
  color: #5787ff;
  font-size: 28rpx;
  text-align: right;
}

.h-f-l {
  width: 90%;
  height: 30px;
  position: relative;
  margin: 40px auto;
  font-size: 30rpx;
  letter-spacing: 10rpx;
  background-color: #f4f6f9;
  color: #fff;
  text-align: center;
  line-height: 30px;
  border-radius: 15px;
}

radio {
  transform: scale(0.6);
}

.h-raido {
  font-size: 27rpx;
  left: -10px;
  position: relative;
}

.separation {
  width: 90%;
  height: 25px;
  position: relative;
  margin: 20px auto 0px auto;
  color: #5787ff;
  font-size: 28rpx;
}

.class-head {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}

.class-l-head {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 30px;
  font-size: 24rpx;
  background-color: #f4f6f9;
  line-height: 30px;
  /* box-shadow: 0px 3px 7px -2px #ccc; */
}

.class-l-head>view {
  width: 33%;
  height: 100%;
  text-align: center;
}

.head-s-c {
  position: relative;
  margin: 0 auto;
  margin-top:20px;
  width: 100%;
}

.class-l-c {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  border-bottom: 1px solid #eaeaea;
  text-align: center;
  line-height: 50px;
}

.class-l-c>view {
  width: 33%;
  height: 100%;
}
.color-c{
  color: #5787ff !important;
}