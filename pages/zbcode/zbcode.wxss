.head {
  width: 100%;
  height: 100%;
  position: relative;
  margin-top: 20px;
}

.head-tips {
  margin-left: 5%;
  font-size: 45rpx;
  color: #353535;
  position: relative;
  line-height: 45rpx;
  border-left: 2px solid #4a7eff;
  padding-left: 10rpx;
}

.contents {
  width: 84%;
  padding: 2% 3%;
  margin-left: 5%;
  border: 1px solid #cacaca;
  font-size: 26rpx;
  color: #999;
  border-radius: 20rpx;
  margin-top: 40rpx;
  display: flex;
  word-break:break-all;
  /* height: 100rpx; */
}

.copy_btn {
  font-size: 27rpx;
  color: #555;
  width: 50%;
  margin: 5% 25%;
  text-align: center;
  border: 1px solid #4a7eff;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}
.tips{
  width: 265rpx;
  margin: 0 auto;
  position: relative;
  margin-top: 5%;
  font-size: 24rpx;
  color: #4a7eff;
}
