/* pages/student/student.wxss */
.class-head {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  text-align: center;
}

.class-l-head {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 30px;
  font-size: 24rpx;
  background-color: #f4f6f9;
  line-height: 30px;
  text-align: center;
  /* box-shadow: 0px 3px 7px -2px #ccc; */
}

.class-l-head>view {
  width: 100%;
  height: 100%;
  text-align: center;
  color: #9a9a9b;
}
.head-s-c {
  position: relative;
  margin: 0 auto;
  margin-top: 30px;
  width: 100%;
}

.class-l-c {
  width: 100%;
  height: 40px;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  border-bottom: 1px solid #eaeaea;
  text-align: center;
  line-height: 40px;
  color: #121212;
}

.class-l-c>view {
  width: 50%;
  height: 100%;
}
.color-c{
  color: #5082ff !important;
}
.class-i-c-p>image{
  width: 25rpx;
  height: 40rpx;
  top: 10rpx;
  position: relative;
}
.class-i-c-p{
  font-size: 25rpx !important;
  color: #5787ff !important;
}